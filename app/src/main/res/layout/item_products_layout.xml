<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#66ffffff"
    app:contentPadding="5dp"
    >
    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:descendantFocusability="beforeDescendants"
                  android:gravity="center"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pop_products_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/nogood"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pop_products_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#B2000000"
                android:textSize="15sp"
                tools:text="商品名称"
                />

            <TextView
                android:id="@+id/tv_pop_products_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff0000"
                android:textSize="13sp"
                tools:text="商品价格"/>

            <Button
                android:id="@+id/btn_pop_products_isRecommend"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#60C8f5"
                android:text="点击推荐"
                android:textSize="13sp"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
