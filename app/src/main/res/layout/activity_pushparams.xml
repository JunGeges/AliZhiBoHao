<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
    >

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#000">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/auv"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_url_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxLength="12"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="推流参数设置"
            />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/resolution_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#F5F5F5"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/radio_smooth_definition"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:checked="false"
            android:button="@null"
            android:background="@drawable/push_params_set_normal_btn"
            android:text="流畅"/>

        <RadioButton
            android:id="@+id/radio_standard_definition"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:checked="false"
            android:button="@null"
            android:layout_marginRight="10dp"
            android:background="@drawable/push_params_set_normal_btn"
            android:text="标清"/>

        <RadioButton
            android:id="@+id/radio_high_definition"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:gravity="center"
            android:checked="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/push_params_set_click_btn"
            android:button="@null"
            android:text="高清"/>

        <RadioButton
            android:id="@+id/radio_super_definition"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/push_params_set_normal_btn"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="超清"/>
    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频帧率:"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_zhenlv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="(0)"
            />

    </LinearLayout>

    <SeekBar
        android:id="@+id/sb_zlv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:max="30"
        android:maxHeight="4.0dip"
        android:minHeight="4.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:progressDrawable="@drawable/po_seekbar"
        android:thumb="@drawable/seekbar_thumb"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频码率:"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_mlv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="(0)"
            android:textColor="#000000"
            />

    </LinearLayout>

    <SeekBar
        android:id="@+id/sb_mlv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:maxHeight="4.0dip"
        android:minHeight="4.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:max="2500"
        android:progressDrawable="@drawable/po_seekbar"
        android:thumb="@drawable/seekbar_thumb" />

    <RadioGroup
        android:id="@+id/rotation_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/screenOrientation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="#000000"
            android:text="横屏"/>

        <RadioButton
            android:id="@+id/screenOrientation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textColor="#000000"
            android:text="竖屏"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logo_90_40"
        android:background="#F5F5F5"
        android:textColor="#000000"
        android:padding="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="15dp"
        >
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/iv_pick_directory"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ic_live_add_photo"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                />
        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择水印位置"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/btn_left_top"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/push_params_set_normal_btn"
                        android:text="左上角"/>

                    <Button
                        android:id="@+id/btn_right_top"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/push_params_set_click_btn"
                        android:text="右上角"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btn_left_bottom"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/push_params_set_normal_btn"
                        android:text="左下角"
                        android:layout_weight="0.20"/>

                    <Button
                        android:id="@+id/btn_right_bottom"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/push_params_set_normal_btn"
                        android:text="右下角"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5"
        >

        <LinearLayout
            android:id="@+id/ll_speed_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="@drawable/ll_speed_layout"
            >

            <ImageView
                android:id="@+id/iv_speed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/smooth_enter"
                />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="测网速"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                />

        </LinearLayout>

    <Button
        android:id="@+id/connectBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进入推流"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:background="@drawable/push_params_set_click_btn"
        />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/auv"
        />
</LinearLayout>