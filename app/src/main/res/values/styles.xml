<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="Resolution_Item">
        <item name="android:layout_marginRight">@dimen/resolution_item_margin</item>
    </style>

    <style name="Label">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title" parent="Label">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--评论弹窗进出的动画 -->
    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/in_lefttoright</item>
        <item name="android:windowExitAnimation">@anim/out_righttoleft</item>
    </style>

    <!--分享弹窗进出的动画-->
    <style name="ShareAnimation">
        <item name="android:windowEnterAnimation">@anim/in_bottomtotop</item>
        <item name="android:windowExitAnimation">@anim/out_toptobottom</item>
    </style>

    <style name="SettingsAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_settings_in</item>
        <item name="android:windowExitAnimation">@anim/pop_settings_out</item>
    </style>

    <style name="Settings_share_animation">
        <item name="android:windowEnterAnimation">@anim/pop_settings_share_in</item>
        <item name="android:windowExitAnimation">@anim/pop_settings_share_out</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
